import java.io.*;
import java.util.*;

public class Solution {

    public static void main(String[] args) {
        
        Scanner sc=new Scanner(System.in);
        String A=sc.next();
       
        StringBuffer sb1 = new StringBuffer(A);
        sb1.reverse();
         String B = sb1.toString();
        
        if(A.equals(B))
        {
            System.out.println("Yes");
        }
        else
        {
        System.out.println("No");
        }
    }
}



